<%= form_for @user do |f| %>
<% if @user.errors.any? %>
<div id="errors">
	<h2> <%= pluralize(@user.errors.count, "error") %> 
	</h2>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
<li> <%= msg  %></li>
<% end %>
	</ul>
<% end %>
<p>
<%=f.label :username %>
<%=f.text_field :username%>
</p>
<p>
<%=f.label :password %>
<%=f.password_field :password%>
</p>
<p>
<%= f.submit %>
</p>
<% end %> 