<body>
	<table style="width:100%">
		<tr>
			<th> Room number</th>
			<th>Size</th>
			<th>Location</th>
		</tr>

		<% @room.each do |roomadd| %>
		<tr>
			<td><%= roomadd.room_no %></td>
			<td><%= roomadd.size %></td>
			<td><%= roomadd.location %></td>
			<td><%= link_to 'Show', room_path(roomadd)%></td>
						<td><%= link_to 'Edit', edit_room_path(roomadd)%></td>
			<td><%= link_to 'Delete', room_path(roomadd), method: :delete%></td>
				</tr>
		<% end %>
	</table>
<%= link_to 'Back', :controller => 'rooms', :action => 'new' %>
